<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.junjange.kordle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="훈들"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kordle">
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.view.dialog.StatisticsDialog"
            android:exported="false"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".ui.view.dialog.SetDialog"
            android:exported="false"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".ui.view.dialog.ExplanationDialog"
            android:exported="false"
            android:theme="@style/Theme.MyDialog" />
        <activity

            android:name=".ui.view.SplashActivity"
            android:exported="true"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
